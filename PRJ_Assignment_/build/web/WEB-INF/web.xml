<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>Displayloaded</servlet-name>
        <servlet-class>controller.AdminController.DislayLoadedController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentController</servlet-name>
        <servlet-class>controller.student.StudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeacherController</servlet-name>
        <servlet-class>controller.teacher.TeacherController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controller.authentication</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeacherTimeTableController</servlet-name>
        <servlet-class>controller.teacher.TimeTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeAttendancesController</servlet-name>
        <servlet-class>controller.teacher.TakeAttendancesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentTimeTableController</servlet-name>
        <servlet-class>controller.student.TimeTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActivityDetailsController</servlet-name>
        <servlet-class>controller.ActivityDetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controller.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExamScheduleController</servlet-name>
        <servlet-class>controller.student.ExamScheduleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MarkReport</servlet-name>
        <servlet-class>controller.student.MarkReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendanceReportController</servlet-name>
        <servlet-class>controller.student.AttendanceReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmailSender</servlet-name>
        <servlet-class>controller.AdminController.EmailSender</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentController</servlet-name>
        <url-pattern>/student</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeacherController</servlet-name>
        <url-pattern>/teacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controller.authentication</servlet-name>
        <url-pattern>/login_auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Displayloaded</servlet-name>
        <url-pattern>/display</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeacherTimeTableController</servlet-name>
        <url-pattern>/teacher/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeAttendancesController</servlet-name>
        <url-pattern>/takeattendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentTimeTableController</servlet-name>
        <url-pattern>/student/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityDetailsController</servlet-name>
        <url-pattern>/activitydetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExamScheduleController</servlet-name>
        <url-pattern>/student/exam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MarkReport</servlet-name>
        <url-pattern>/student/markreport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendanceReportController</servlet-name>
        <url-pattern>/student/attreport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmailSender</servlet-name>
        <url-pattern>/mail</url-pattern>
    </servlet-mapping>
</web-app>
